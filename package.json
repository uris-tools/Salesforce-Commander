{
  "name": "salesforce-commander",
  "version": "0.9.0",
  "description": "Command line interface for Salesforce",
  "private": true,
  "scripts": {
    "watch": "webpack --mode=development --watch --config config/webpack.config.js --env BROWSER=FIREFOX",
    "watch_chrome": "webpack --mode=development --watch --config config/webpack.config.js --env BROWSER=CHROME",
    "build": "webpack --mode=development --config config/webpack.config.js --env BROWSER=FIREFOX",
    "build_firefox": "webpack --mode=production --config config/webpack.config.js --env BROWSER=FIREFOX",
    "build_chrome": "webpack --mode=production --config config/webpack.config.js --env BROWSER=CHROME",
    "format": "prettier --write --end-of-line lf --ignore-unknown --print-width 180 \"{config,public,src}/**/*.{html,css,js,ts,json}\""
  },
  "devDependencies": {
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.3",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.7.2",
    "prettier": "^2.8.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "lisan": "latest",
    "mousetrap": "latest"
  }
}
